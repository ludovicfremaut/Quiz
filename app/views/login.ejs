<%- include('partials/head') %>
  <%- include('partials/header') %>


    <!-- Corps de la page -->
    <main class="login-page">
      <h1>Connexion</h1>
      <!-- Berlingot d'erreur pour afficher les erreurs -->
      <% if (errorMessage) { %>
        <div class="form-error-block">
          Une erreur s'est produite à l'envoi du formulaire : <%= errorMessage %>.
        </div>
        <% } %>
          <form class="login-form" action="/connexion" method="post">
            <div class="login-form__fieldset">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" placeholder="nom@mail.fr" />
            </div>

            <div class="login-form__fieldset">
              <label for="password">Mot de passe</label>
              <input type="password" name="password" id="password" placeholder="******" />
            </div>

            <button type="submit">Connexion</button>
          </form>

          <!-- Liens utiles -->
          <ul>
            <li>
              <a href="/inscription">Vous n'avez pas encore de compte ?</a>
            </li>
            <li><a href="/">Retour à la page d'accueil</a></li>
          </ul>
    </main>

    <%- include('partials/footer') %>